[Unit]
Description=ympd server daemon
Requires=network.target local-fs.target

[Service]
Environment=MPD_HOST={{ mpd_srv_host }}
Environment=MPD_PORT={{ mpd_srv_port }}
Environment=WEB_PORT=127.0.0.1:6666
Environment=YMPD_USER={{ user }}
ExecStart=/home/ympd/ympd/build/ympd --user $YMPD_USER --webport $WEB_PORT --host $MPD_HOST --port $MPD_PORT
Type=simple

[Install]
WantedBy=multi-user.target
