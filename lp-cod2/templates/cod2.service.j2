[Unit]
Description=Call of Duty 2 dedicated Server
After=network.target

[Service]
Environment=LD_LIBRARY_PATH=/home/{{ user }}
WorkingDirectory=/home/{{ user }}
User={{ user }}
ExecStart=/home/{{ user }}/cod2_lnxded +set net_port {{ port }} +set sv_punkbuster 0 +set sv_pure 1 +exec server.cfg +set fs_homepath /home/{{ user }}/ +map_rotate +set loc_language 2 +set sv_queryIgnoreDebug 1 +set sv_queryIgnoreMegs 1 +set sv_queryIgnoreTime 2 +set sv_queryBounceIgnoreTime 1200
RestartSec=60
Restart=always

[Install]
WantedBy=multi-user.target
