# {{ ansible_managed }}
[Unit]
Description=Team Speak 3 Server
After=network.target

[Service]
WorkingDirectory=/home/{{ ts.user }}/teamspeak3-server_linux_amd64/
User={{ ts.user }}
Type=forking
ExecStart=/home/{{ ts.user }}/teamspeak3-server_linux_amd64/ts3server_startscript.sh start inifile=ts3server.ini
ExecStop=/home/{{ ts.user }}/teamspeak3-server_linux_amd64/ts3server_startscript.sh stop
PIDFile=/home/{{ ts.user }}/teamspeak3-server_linux_amd64/ts3server.pid
RestartSec=15
Restart=always

[Install]
WantedBy=multi-user.target
